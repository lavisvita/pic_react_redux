extends layout
block header
    div.row
        div.col-lg-12
            h3 Registration
        div.col-lg-12
            form.form-horizontal(action='/reg', method='post')
                .form-group
                    .col-lg-4
                        input#inputLogin.form-control(type='text', name='login', placeholder='Login')
                .form-group
                    .col-lg-4
                        input#inputPassword.form-control(type='password', name='password', placeholder='Password')
                .form-group
                    .col-lg-4
                        button.btn.btn-default(type='reset') Cancel
                        button.btn.btn-primary(type='submit') Submit

